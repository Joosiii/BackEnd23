<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head'); -%>
</head>

<body>
    <%- include('includes/header'); -%>

    <%- include('includes/nav'); -%>

    <main>
        <h1>Edit Profile</h1>

        <form action="/edit" method="post">
            <section id="humanprofileedit">

                <h2> Your profile</h2>
                <label for="name">Name</label>
                <input type="text" id="name" name="name" value="<%= userprofile.name %>">

                <label for="age">Age</label>
                <input type="number" id="age" name="age" value="<%= userprofile.age %>">

                <label for="country">Country</label>
                <input type="text" name="country" id="country" value="<%= userprofile.country %>">

                <label for="bio">Profile Biography</label>
                <textarea name="bio" id="bio" cols="30" rows="5"><%= userprofile.bio %></textarea>

                <div id="int-list">
                    <fieldset id="interestfieldset">
                        <legend>Interests:</legend>
                        <% interests.forEach(function(interest){ %>
                        <input type="checkbox" name="interests" value="<%= interest %>" id="<%= interest %>" checked>
                        <label for="<%= interest %>"><%= interest %></label><br>
                        <% }) %>
                    </fieldset>
                </div>
            </section>

            <input type="submit" value="Opslaan">

            <script src="js/editscript.js"></script>
        </form>
    </main>
</body>

</html>